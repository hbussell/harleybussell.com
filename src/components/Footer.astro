    gap: 10px;
    align-items:center;
  }
  .social-links {
    display: flex;
    justify-content: center;
    align-items:center;
    gap: 1em;
    margin-top: 1em;
  }
  .social-links a {
    text-decoration: none;
    display: flex;
    gap: 1ch;
    flex-direction: row;
    align-items:center;
    color: var( --text-footer-color);
  }
  .social-links a:hover {
    color: rgb(var(--text-accent-color));
  }
